{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2019",
    "lib": [
      "es2019",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "axios": ["src/axios.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__tests__", "**/*.test.ts"]
}
